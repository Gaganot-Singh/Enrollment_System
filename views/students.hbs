<div class="main">
  <div class="col-md-12">
    <br>
    <h1>
      <b>
        <u> STUDENTS </u>
      </b>
    </h1>
    <br>
    <h2>
      <a href="/students/add" class="btn btn-success float-right">Add New Student</a>
    </h2>
    <hr />
    <div class="table-responsive">
      <table class="table ">
        <thead>
          <tr>
            <th>Student&nbsp;Num</th>
            <th>Full&nbsp;Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Status</th>
            <th>Course ID</th>
          </tr>
        </thead>
        <tbody>
          {{#each students}}
            <tr>
              <td>
                {{studentNum}}
              </td>
              <td>
                <a href="/students/{{studentNum}}">{{firstName}} {{lastName}}</a>
              </td>
              <td>
                <a href="mailto:{{email}}">{{email}}</a>
              </td>
              <td>{{addressStreet}} {{addressCity}} {{addressProvince}}</td>
              <td>{{status}}</td>
              <td>
                <a href="/courses/{{course}}">{{course}}</a>
              </td>
              <td>
                <a class="btn btn-danger" href="students/delete/{{studentNum}}">REMOVE</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  {{#unless students}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
  {{/unless}}
</div>